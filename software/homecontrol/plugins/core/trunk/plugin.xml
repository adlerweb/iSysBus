<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.isysbus.homecontrol.core.project" name="Project" schema="schema/org.isysbus.homecontrol.core.project.exsd"/>
   <extension-point id="org.isysbus.homecontrol.core.connections.busconnector" name="busconnector" schema="schema/org.isysbus.homecontrol.core.connections.busconnector.exsd"/>
   <extension-point id="org.isysbus.homecontrol.core.connections.buslistener" name="buslistener" schema="schema/org.isysbus.homecontrol.core.connections.buslistener.exsd"/>
   <extension-point id="org.isysbus.homecontrol.core.projectPreferences" name="ProjectPreferences" schema="schema/org.isysbus.homecontrol.core.projectPreferences.exsd"/>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.isysbus.homecontrol.core.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.isysbus.homecontrol.core.application"
            name="HomeControl">
         <property
               name="windowImages"
               value="icons/homecontrol_16x16.png,icons/homecontrol_32x32.png,icons/homecontrol_48x48.png,icons/homecontrol_64x64.png,icons/homecontrol_128x128.png">
         </property>
         <property
               name="appName"
               value="HomeControl">
         </property>
         <property
               name="startupForegroundColor"
               value="00FFFF">
         </property>
         <property
               name="startupMessageRect"
               value="10,165,280,15">
         </property>
         <property
               name="startupProgressRect"
               value="0,185,300,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="aboutText"
               value="HomeControl Standardversion">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="Datei">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  icon="icons/wand.png"
                  label="Neu"
                  style="push">
            </command>
            <command
                  commandId="org.isysbus.homecontrol.core.commands.NewProject"
                  icon="icons/blue-folder.png"
                  label="Neues Projekt"
                  style="push">
            </command>
            <command
                  commandId="org.isysbus.homecontrol.core.commands.OpenProject"
                  icon="icons/blue-folder-open.png"
                  label="Projekt öffnen"
                  style="push">
            </command>
            <menu
                  id="lastOpenedProjects"
                  label="Zuletzt geöffnete Projekte">
               <command
                     commandId="org.isysbus.homecontrol.core.commands.OpenLastProject1"
                     label="Projekt 1"
                     style="push">
               </command>
               <command
                     commandId="org.isysbus.homecontrol.core.commands.OpenLastProject2"
                     label="Projekt 2"
                     style="push">
               </command>
               <command
                     commandId="org.isysbus.homecontrol.core.commands.OpenLastProject3"
                     label="Projekt 3"
                     style="push">
               </command>
               <command
                     commandId="org.isysbus.homecontrol.core.commands.OpenLastProject4"
                     label="Projekt 4"
                     style="push">
               </command>
               <command
                     commandId="org.isysbus.homecontrol.core.commands.OpenLastProject5"
                     label="Projekt 5"
                     style="push">
               </command>
            </menu>
            <command
                  commandId="org.isysbus.homecontrol.core.commands.OpenProjectSettings"
                  icon="icons/blue-folder--pencil.png"
                  label="Projekteinstellungen"
                  style="push"
                  tooltip="Projektspezifische Einstellungen">
            </command>
            <command
                  commandId="org.isysbus.homecontrol.core.commands.CloseProject"
                  icon="icons/cross-white.png"
                  label="Projekt schließen"
                  style="push">
            </command>
            <separator
                  name="org.isysbus.homecontrol.core.fileSeparator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.import"
                  icon="icons/application-import.png"
                  label="Import"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.export"
                  icon="icons/application-export.png"
                  label="Export"
                  style="push">
            </command>
            <separator
                  name="org.isysbus.homecontrol.core.fileSeparator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.isysbus.homecontrol.core.commands.Exit"
                  icon="icons/door-open-out.png"
                  label="Beenden"
                  style="push"
                  tooltip="Beendet die Anwendung">
            </command>
         </menu>
         <menu
               id="editMenu"
               label="Bearbeiten">
         </menu>
         <menu
               id="viewMenu"
               label="Ansicht">
            <command
                  commandId="org.isysbus.homecontrol.core.commands.ShowLogWindow"
                  icon="icons/application_osx_terminal.png"
                  label="Log"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="View"
                  style="push">
            </command>
         </menu>
         <menu
               id="optionsMenu"
               label="Optionen">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  icon="icons/wrench.png"
                  label="Einstellungen"
                  style="push">
            </command>
         </menu>
         <menu
               id="helpMenu"
               label="Hilfe">
         </menu>
         <menu
               id="debugMenu"
               label="Debug">
            <visibleWhen>
               <with
                     variable="org.isysbus.homecontrol.core.variables.isDebugMode">
                  <equals
                        value="yes">
                  </equals>
               </with>
            </visibleWhen>
            <command
                  commandId="org.eclipse.ui.window.resetPerspective"
                  label="Reset Workspace"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.isysbus.homecontrol.core.toolbars.file">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  icon="icons/wand.png"
                  label="Neu"
                  style="push">
            </command>
            <command
                  commandId="org.isysbus.homecontrol.core.commands.OpenProject"
                  icon="icons/blue-folder-open.png"
                  label="Projekt öffnen"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.save"
                  icon="icons/disk.png"
                  label="Speichern"
                  style="push"
                  tooltip="Speichern">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.isysbus.homecontrol.core.toolbars.Connection">
            <command
                  commandId="org.isysbus.homecontrol.core.commands.Connect"
                  icon="icons/plug-connect.png"
                  label="Verbinden"
                  style="toggle">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.isysbus.homecontrol.core.commands.NewProject"
            id="org.isysbus.homecontrol.core.commands.NewProject"
            name="Neues Projekt">
      </command>
      <command
            defaultHandler="org.isysbus.homecontrol.core.commands.OpenProject"
            id="org.isysbus.homecontrol.core.commands.OpenProject"
            name="Projekt öffnen">
      </command>
      <command
            id="org.isysbus.homecontrol.core.commands.OpenProjectSettings"
            name="OpenProjectSettings">
      </command>
      <command
            id="org.isysbus.homecontrol.core.commands.CloseProject"
            name="Projekt schließen">
      </command>
      <command
            description="Handler: org.isysbus.homecontrol.core.commands.ExitHandler"
            id="org.isysbus.homecontrol.core.commands.Exit"
            name="Exit">
      </command>
      <command
            defaultHandler="org.isysbus.homecontrol.core.commands.ToggleConnection"
            id="org.isysbus.homecontrol.core.commands.Connect"
            name="Verbinden">
         <state
               class="org.eclipse.jface.commands.ToggleState"
               id="STYLE">
         </state>
      </command>
      <command
            id="org.isysbus.homecontrol.core.commands.OpenLastProject1"
            name="OpenLastProject1">
      </command>
      <command
            id="org.isysbus.homecontrol.core.commands.OpenLastProject2"
            name="OpenLastProject2">
      </command>
      <command
            id="org.isysbus.homecontrol.core.commands.OpenLastProject3"
            name="OpenLastProject3">
      </command>
      <command
            id="org.isysbus.homecontrol.core.commands.OpenLastProject4"
            name="OpenLastProject4">
      </command>
      <command
            id="org.isysbus.homecontrol.core.commands.OpenLastProject5"
            name="OpenLastProject5">
      </command>
      <command
            defaultHandler="org.isysbus.homecontrol.core.commands.Options"
            id="org.isysbus.homecontrol.core.commands.Options"
            name="Options">
      </command>
      <command
            defaultHandler="org.isysbus.homecontrol.core.commands.ShowLogWindow"
            id="org.isysbus.homecontrol.core.commands.ShowLogWindow"
            name="ShowLogWindow">
      </command>
      <command
            id="org.isysbus.homecontrol.core.commands.Edit"
            name="Edit">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.isysbus.homecontrol.core.handlers.OpenProjectSettings"
            commandId="org.isysbus.homecontrol.core.commands.OpenProjectSettings">
         <enabledWhen>
            <with
                  variable="org.isysbus.homecontrol.core.variables.isProjectOpen">
               <equals
                     value="yes">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.isysbus.homecontrol.core.commands.CloseProject"
            commandId="org.isysbus.homecontrol.core.commands.CloseProject">
         <activeWhen>
            <with
                  variable="org.isysbus.homecontrol.core.variables.isProjectOpen">
               <equals
                     value="yes">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.isysbus.homecontrol.core.handlers.OpenLastProject1Handler"
            commandId="org.isysbus.homecontrol.core.commands.OpenLastProject1">
      </handler>
      <handler
            class="org.isysbus.homecontrol.core.handlers.OpenLastProject2Handler"
            commandId="org.isysbus.homecontrol.core.commands.OpenLastProject2">
      </handler>
      <handler
            class="org.isysbus.homecontrol.core.handlers.OpenLastProject3Handler"
            commandId="org.isysbus.homecontrol.core.commands.OpenLastProject3">
      </handler>
      <handler
            class="org.isysbus.homecontrol.core.handlers.OpenLastProject4Handler"
            commandId="org.isysbus.homecontrol.core.commands.OpenLastProject4">
      </handler>
      <handler
            class="org.isysbus.homecontrol.core.handlers.OpenLastProject5Handler"
            commandId="org.isysbus.homecontrol.core.commands.OpenLastProject5">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.isysbus.homecontrol.core.preferences.Global"
            id="org.isysbus.homecontrol.core.preferences.global"
            name="Allgemein">
      </page>
      <page
            class="org.isysbus.homecontrol.core.preferences.Connections"
            id="org.isysbus.homecontrol.core.preferences.Connections"
            name="Verbindungen">
      </page>
   </extension>
   <extension
         point="org.isysbus.homecontrol.core.projectPreferences">
      <page
            class="org.isysbus.homecontrol.core.project_preferences.GlobalSettings"
            id="org.isysbus.homecontrol.core.project_preferences.GlobalSettings"
            name="Allgemeine Einstellungen">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.isysbus.homecontrol.core.perspective.Default"
            id="org.isysbus.homecontrol.core.perspective.Default"
            name="Standard">
      </perspective>
   </extension>
   <extension
         id="homecontrol"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.isysbus.homecontrol.core.application"
            name="HomeControl Installation">
         <property
               name="appName"
               value="HomeControl Installation">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="startupForegroundColor"
               value="00FFFF">
         </property>
         <property
               name="startupMessageRect"
               value="10,165,280,15">
         </property>
         <property
               name="startupProgressRect"
               value="0,185,300,15">
         </property>
         <property
               name="windowImages"
               value="icons/homecontrol_16x16.png,icons/homecontrol_32x32.png,icons/homecontrol_48x48.png,icons/homecontrol_64x64.png,icons/homecontrol_128x128.png">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.isysbus.homecontrol.general"
            name="Allgemein">
      </category>
      <view
            category="org.eclipse.ui"
            class="org.eclipse.ui.ExtensionFactory:progressView"
            icon="icons/cog.png"
            id="org.eclipse.ui.views.ProgressView"
            name="Fortschritt"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="org.isysbus.homecontrol.general"
            class="org.isysbus.homecontrol.core.views.BusNodeView"
            icon="icons/brick.png"
            id="org.isysbus.homecontrol.core.views.BusNodeView"
            name="Knoten"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="org.isysbus.homecontrol.general"
            class="org.isysbus.homecontrol.core.views.BusStructureView"
            icon="icons/sitemap-application-blue.png"
            id="org.isysbus.homecontrol.core.views.BusStructureView"
            name="Struktur"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="org.isysbus.homecontrol.general"
            class="org.isysbus.homecontrol.core.views.NodeGroupView"
            icon="icons/zones.png"
            id="org.isysbus.homecontrol.core.views.NodeGroupView"
            name="Gruppen"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.isysbus.homecontrol.core.preferences.Initializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="true"
               id="org.isysbus.homecontrol.core.views.BusNodeView"
               minimized="false"
               moveable="true"
               ratio="0.25f"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.isysbus.homecontrol.core.project">
      <project
            class="org.isysbus.homecontrol.core.nodes.NodePopulator">
      </project>
      <project
            class="org.isysbus.homecontrol.core.ProjectNameLabel">
      </project>
      <project
            class="org.isysbus.homecontrol.core.misc.ProjectStateSourceProvider">
      </project>
   </extension>
   <extension
         point="org.isysbus.homecontrol.core.connections.buslistener">
      <buslistener
            class="org.isysbus.homecontrol.core.ConnectionStatusLabelFactory">
      </buslistener>
      <buslistener
            class="org.isysbus.homecontrol.core.nodes.NodeListModelFactory">
      </buslistener>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.isysbus.homecontrol.newWizards.general"
            name="Allgemein">
      </category>
      <wizard
            category="org.isysbus.homecontrol.newWizards.general"
            class="org.isysbus.homecontrol.core.project.wizard.ProjectWizard"
            finalPerspective="org.isysbus.homecontrol.core.perspective.Default"
            icon="icons/page_white.png"
            id="org.isysbus.homecontrol.core.project.wizard.ProjectWizard"
            name="Neues Projekt">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="org.isysbus.homecontrol.core.misc.ProjectStateSourceProvider">
         <variable
               name="org.isysbus.homecontrol.core.variables.isProjectOpen"
               priorityLevel="workbench">
         </variable>
         <variable
               name="org.isysbus.homecontrol.core.variables.isProject1Available"
               priorityLevel="workbench">
         </variable>
         <variable
               name="org.isysbus.homecontrol.core.variables.isProject2Available"
               priorityLevel="workbench">
         </variable>
         <variable
               name="org.isysbus.homecontrol.core.variables.isProject3Available"
               priorityLevel="workbench">
         </variable>
         <variable
               name="org.isysbus.homecontrol.core.variables.isProject4Available"
               priorityLevel="workbench">
         </variable>
         <variable
               name="org.isysbus.homecontrol.core.variables.isProject5Available"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
      <sourceProvider
            provider="org.isysbus.homecontrol.core.misc.DebugModeSourceProvider">
         <variable
               name="org.isysbus.homecontrol.core.variables.isDebugMode"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
      <sourceProvider
            provider="org.isysbus.homecontrol.core.misc.ConnectionStateSourceProvider">
         <variable
               name="org.isysbus.homecontrol.core.variables.isConnected"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         id="product_default"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.isysbus.homecontrol.core.application"
            name="HomeControl">
         <property
               name="windowImages"
               value="icons/homecontrol_16x16.png,icons/homecontrol_32x32.png,icons/homecontrol_48x48.png,icons/homecontrol_64x64.png,icons/homecontrol_128x128.png">
         </property>
         <property
               name="aboutText"
               value="HomeControl Standardversion">
         </property>
         <property
               name="startupForegroundColor"
               value="00FFFF">
         </property>
         <property
               name="startupProgressRect"
               value="5,150,445,15">
         </property>
         <property
               name="startupMessageRect"
               value="7,160,445,20">
         </property>
         <property
               name="appName"
               value="HomeControl">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>

</plugin>
